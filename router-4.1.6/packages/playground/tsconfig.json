{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["**/node_modules", "**/.*/"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "vue-router": ["../router/src"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
